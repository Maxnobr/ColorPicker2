<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="190dp"
        android:background="@android:color/background_light"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/save_button"
            android:layout_alignBottom="@+id/save_button"
            android:layout_marginEnd="61dp"
            android:layout_toStartOf="@+id/ib_close"
            android:background="@android:color/holo_red_light"
            android:onClick="closeSave"
            android:text="Cancel"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="404dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_marginEnd="57dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@+id/cancel_button"
            android:background="@android:color/holo_green_light"
            android:text="save"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="331dp" />

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:onClick="closeSave"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            tools:layout_editor_absoluteX="223dp"
            tools:layout_editor_absoluteY="268dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib_close"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:tooltipText="Name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ib_close"
            android:layout_centerHorizontal="true"
            android:text="Please Name your Color" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>