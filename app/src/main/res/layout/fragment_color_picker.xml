<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/redText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/redLabel"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Red"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:max="255"
        android:progressTint="@android:color/holo_red_dark"
        android:scrollbarSize="40dp"
        android:thumbTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="@+id/redLabel"
        app:layout_constraintEnd_toStartOf="@+id/redText"
        app:layout_constraintStart_toEndOf="@+id/redLabel"
        app:layout_constraintTop_toTopOf="@+id/redLabel" />

    <TextView
        android:id="@+id/greenLabel"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Green"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/blueLabel"
        app:layout_constraintEnd_toEndOf="@+id/redLabel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/redLabel"
        app:layout_constraintTop_toBottomOf="@+id/redLabel" />

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:max="255"
        android:progressTint="@android:color/holo_green_dark"
        android:thumbTint="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="@+id/greenLabel"
        app:layout_constraintEnd_toStartOf="@+id/greenText"
        app:layout_constraintStart_toEndOf="@+id/greenLabel"
        app:layout_constraintTop_toTopOf="@+id/greenLabel" />

    <TextView
        android:id="@+id/blueLabel"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Blue"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/greenLabel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/greenLabel"
        app:layout_constraintTop_toBottomOf="@+id/redLabel"
        app:layout_constraintVertical_bias="0.75" />

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:max="255"
        android:progressTint="@android:color/holo_blue_dark"
        android:thumbTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/blueLabel"
        app:layout_constraintEnd_toStartOf="@+id/blueText"
        app:layout_constraintStart_toEndOf="@+id/blueLabel"
        app:layout_constraintTop_toTopOf="@+id/blueLabel" />

    <EditText
        android:id="@+id/redText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:ems="3"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="@+id/redSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/redSeekBar" />

    <EditText
        android:id="@+id/greenText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:ems="3"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="@+id/greenSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenSeekBar" />

    <EditText
        android:id="@+id/blueText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:ems="3"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/blueSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blueSeekBar" />

</android.support.constraint.ConstraintLayout>
